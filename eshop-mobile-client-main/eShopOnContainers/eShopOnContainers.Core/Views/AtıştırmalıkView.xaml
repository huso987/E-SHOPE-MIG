<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eShopOnContainers.Core.Views.Atıştırmalık"
             xmlns:viewmodels="clr-namespace:eShopOnContainers.Core.ViewModels"
             x:DataType="viewmodels:AtıştırmalıkViewModel"
             >
    <ContentPage.Resources>

        <ResourceDictionary>
            <Color x:Key="Accent">#ffc200</Color>

        </ResourceDictionary>
    </ContentPage.Resources>




    <ScrollView>


        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">

                <Button Text="Çikolata"  TextColor="Black"  BackgroundColor="#ffc200" Command="{Binding ÇikolataButton}" />
                <Button Text="Bar"  TextColor="Black" BackgroundColor="#ffc200" Command="{Binding BarButton}" />

            </StackLayout>


        </StackLayout>

    </ScrollView>
</ContentPage>